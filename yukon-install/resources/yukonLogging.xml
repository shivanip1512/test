<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false" 
                     xmlns:log4j='http://jakarta.apache.org/log4j/'>

  <!-- appenders -->
  <!-- Custom appender for Yukon. Adjust maximum file size by setting maxFileSizeString -->
  <!-- Possible values: 1g, .5M, 1000K, 1000000B or 10000000 -->
  <appender name="yukonFileAppender" class ="com.cannontech.clientutils.YukonFileAppender">
  	<!-- set the default file size to 1 gigabyte -->
  	<param name="maxFileSizeString" value="1G"/>
  </appender>
  
  <!-- Appends messages to the console. To change the layout format, see -->
  <!-- log4j documents for conversion/format character definitions -->
  <appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{MM/dd/yyyy HH:mm:ss,SSS zzz} [%t] %-5p %c - %m%n"/>
    </layout>
  </appender>
  
  <!-- Custom appender to output all RFN device communications to the /Comm log subdirectory -->
  <appender name="rfnCommsFileAppender" class="com.cannontech.clientutils.YukonFileAppender">
    <param name="subdirectory" value="Comm/" />
    <param name="filenamePrefix" value="RfnDeviceLog" />
    <param name="maxFileSizeString" value="1G"/>
  </appender>
  
  <!-- package level loggers -->
  <!-- Adjust the following logger levels to fine-tune logging output -->
  <!-- To turn of logging for any package use: level value="off"  -->
  <!-- Possible levels: OFF, FATAL, ERROR, WARN, INFO, DEBUG, OFF -->
  
  <logger name="com.cannontech" >
  	<level value="info"/>
  </logger>
  
  <logger name="org.hibernate" >
  	<level value="warn"/>
  </logger>
  
  <logger name="org.springframework">
  	<level value="warn"/>
  </logger>
  
  <logger name="org.apache.myfaces">
  	<level value="warn"/>
  </logger>
  
  <logger name="org.springframework.ws.soap.server.endpoint.interceptor">
    <level value="DEBUG"/>
  </logger>
  
  <!-- RFN device comms logger -->
  <logger name="rfnCommsLogger">
    <level value="INFO"/>
    <appender-ref ref="rfnCommsFileAppender" />
  </logger>

  <!-- all package level loggers will inherit these two loggers -->  
  <logger name="com">
    <level value="INFO"/>
    <appender-ref ref="yukonFileAppender" />
  </logger>

  <logger name="org">
    <level value="INFO"/>
    <appender-ref ref="yukonFileAppender" />
  </logger>

  <!-- root logger will be inherited by all loggers -->
  <root>
    <level value ="info"/>
    <appender-ref ref="consoleAppender" />
  </root>  
</log4j:configuration>
