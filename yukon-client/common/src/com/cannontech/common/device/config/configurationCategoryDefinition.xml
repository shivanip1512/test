        <enum field="disconnectMode" type="DisconnectMode" default="ON_DEMAND"/>
        <enum field="reconnectParam" type="ReconnectParameter" default="ARM"/>
        <enum field="demandInterval" type="DisconnectDemandInterval" default="5"/>
        <float field="disconnectDemandThreshold" minValue="0.5" maxValue="12.0" default="0.5" decimalDigits="1"/>
        <integer field="disconnectLoadLimitConnectDelay" minValue="0" maxValue="30" default="5"/>
        <integer field="maxDisconnects" minValue="0" maxValue="20" default="0"/>
        <integer field="disconnectMinutes" minValue="5" maxValue="1440" default="5"/>
        <integer field="connectMinutes" minValue="5" maxValue="1440" default="5"/>
