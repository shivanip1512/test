<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="commandRequestExecutor" class="com.cannontech.common.device.commands.impl.CommandRequestExecutorImpl">
        <property name="porterConnection" ref="porterConnection" />
        <property name="deviceErrorTranslatorDao" ref="deviceErrorTranslator" />
        <property name="paoDao" ref="paoDao" />
        <property name="commandAuthorizationService" ref="paoCommandAuthorizationService" />
    </bean>
    
	<bean id="groupCommandExecutor" class="com.cannontech.common.device.commands.impl.GroupCommandExecutorImpl" lazy-init="true">
		<property name="emailService" ref="emailService"/>
		<property name="commandRequestExecutor" ref="commandRequestExecutor" />
		<property name="meterDao" ref="meterDao" />
		<property name="executor" ref="globalScheduledExecutor" />
		<property name="pointFormattingService" ref="pointFormattingService" />
	</bean>
    
</beans>