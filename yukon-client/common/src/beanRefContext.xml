<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
 
 <beans>
<!-- The application context files that are loaded by tomcat -->
   <bean id="com.cannontech.context.common" 
        class="com.cannontech.spring.CannonClassPathXmlApplicationContext"
        lazy-init="true">
     <constructor-arg>
       <list>
			<value>com/cannontech/mainContext.xml</value>
			<value>com/cannontech/amr/amrContext-client.xml</value>
			<value>com/cannontech/amr/amrContext.xml</value>
			<value>com/cannontech/common/device/deviceContext.xml</value>
			<value>com/cannontech/common/bulk/bulkContext.xml</value>
			<value>com/cannontech/common/device/config/deviceConfigurationContext.xml</value>
			<value>com/cannontech/core/authentication/authContext.xml</value>
			<value>com/cannontech/core/authorization/applicationContext.xml</value>
			<value>com/cannontech/core/dao/applicationContext.xml</value>
			<value>com/cannontech/core/dynamic/applicationContext.xml</value>
       </list>
     </constructor-arg>
   </bean>
    
   <alias alias="com.cannontech.context.client" name="com.cannontech.context.common"/>
   
   <bean id="com.cannontech.context.services" 
        class="com.cannontech.spring.CannonClassPathXmlApplicationContext"
        lazy-init="true">
     <constructor-arg>
       <list>
         <value>com/cannontech/hibernate/hibernateContext.xml</value>
         <value>com/cannontech/cc/applicationContext.xml</value>
         <value>com/cannontech/notif/applicationContext.xml</value>
         <value>com/cannontech/loadcontrol/applicationContext.xml</value>
       </list>
     </constructor-arg>
     <constructor-arg>
       <ref bean="com.cannontech.context.common"/> <!-- this is the parent -->
     </constructor-arg>
   </bean> 
   
 </beans>
