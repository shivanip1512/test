<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

    <!-- The application context files that are loaded by tomcat -->
    <bean id="com.cannontech.context.client"
        class="com.cannontech.spring.CannonClassPathXmlApplicationContext" lazy-init="true">
        <constructor-arg index="0" ref="com.cannontech.baseclient.list" />
        <constructor-arg index="1" value="true" />
        <constructor-arg index="2">
            <null />
        </constructor-arg>
    </bean>

    <bean id="com.cannontech.context.services"
        class="com.cannontech.spring.CannonClassPathXmlApplicationContext" lazy-init="true">
        <constructor-arg index="0" ref="com.cannontech.services.list" />
        <constructor-arg index="1" value="true" />
        <constructor-arg index="2">
            <null />
        </constructor-arg>
    </bean>

    <bean id="com.cannontech.context.common.list"
        class="org.springframework.beans.factory.config.ListFactoryBean" abstract="true">
        <property name="sourceList">
            <list>
                <value>com/cannontech/mainContext.xml</value>
                <value>com/cannontech/yukon/server/cache/cacheContext.xml</value>
                <value>com/cannontech/common/device/deviceContext.xml</value>
                <value>com/cannontech/amr/amrContext-client.xml</value>
                <value>com/cannontech/common/bulk/bulkContext.xml</value>
                <value>com/cannontech/web/input/inputContext.xml</value>
                <value>com/cannontech/common/device/config/deviceConfigurationContext.xml</value>
                <value>com/cannontech/core/authentication/authContext.xml</value>
                <value>com/cannontech/core/authorization/applicationContext.xml</value>
                <value>com/cannontech/core/dao/applicationContext.xml</value>
                <value>com/cannontech/core/dynamic/applicationContext.xml</value>
                <value>com/cannontech/core/service/dateContext.xml</value>
            </list>
        </property>
    </bean>

    <bean id="com.cannontech.baseserver.list"
        class="org.springframework.beans.factory.config.ListFactoryBean"
        parent="com.cannontech.context.common.list">
        <property name="sourceList">
            <list merge="true">
                <value>com/cannontech/hibernate/hibernateContext.xml</value>
            </list>
        </property>
    </bean>

    <bean id="com.cannontech.baseclient.list"
        class="org.springframework.beans.factory.config.ListFactoryBean"
        parent="com.cannontech.context.common.list">
        <property name="sourceList">
            <list merge="true">
                <value>com/cannontech/nonHibernateTransactionContext.xml</value>
            </list>
        </property>
    </bean>

    <bean id="com.cannontech.services.list"
        class="org.springframework.beans.factory.config.ListFactoryBean"
        parent="com.cannontech.context.common.list">
        <property name="sourceList">
            <list merge="true">
                <value>com/cannontech/hibernate/hibernateContext.xml</value>
                <value>com/cannontech/cc/applicationContext.xml</value>
                <value>com/cannontech/notif/applicationContext.xml</value>
                <value>com/cannontech/loadcontrol/applicationContext.xml</value>
                <value>com/cannontech/core/service/applicationContext.xml</value>
            </list>
        </property>
    </bean>

</beans>
