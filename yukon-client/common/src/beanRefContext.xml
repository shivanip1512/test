<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
 
 <beans>
   <bean id="com.cannontech.context.main" 
        class="org.springframework.context.support.ClassPathXmlApplicationContext"
        lazy-init="true">
     <constructor-arg>
       <list>
         <value>com/cannontech/spring/applicationContext.xml</value>
         <value>com/cannontech/spring/hibernateContext.xml</value>
         <value>com/cannontech/cc/applicationContext.xml</value>
       </list>
     </constructor-arg>
   </bean>
   
   <bean id="com.cannontech.context.services" 
        class="org.springframework.context.support.ClassPathXmlApplicationContext"
        lazy-init="true">
     <constructor-arg>
       <list>
         <value>com/cannontech/spring/applicationContext.xml</value>
         <value>com/cannontech/spring/hibernateContext.xml</value>
         <value>com/cannontech/cc/applicationContext.xml</value>
         <value>com/cannontech/notif/applicationContext.xml</value>
       </list>
     </constructor-arg>
   </bean>
   
 </beans>