<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="deviceDefinition.xsl"?>

<!--
This file contains default device and point information for all of the devices in Yukon.
-->

<deviceDefinitions>
    
    <!-- Group 1 -->
    <device>
        <type value="1019" javaConstant="MCT310" changeGroup="change1" />
        <displayName value="Device 1"/>
        <displayGroup value="display1"/>
        <points>
            <point init="true" type="PulseAccumulator">
                <name>pulse1</name>
                <offset value="2"/>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
            </point>

            <point type="PulseAccumulator">
                <name>pulse2</name>
                <offset value="4"/>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
            </point>
            
            <point init="true" type="DemandAccumulator">
                <name>demand1</name>
                <offset value="1"/>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure0"/>
            </point>
            
            <point init="true" type="Analog">
                <name>analog1</name>
                <offset value="1"/>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
                
            </point>
            <point type="Status">
                <name>status1</name>
                <offset value="1"/>
                <stategroup value="state0"/>
            </point>
            
        </points>
        <commands>
        	<command name="command1">
        		<cmd text="do command1" />
        		<pointRef name="pulse1"/>
        	</command>
        	<command name="command2">
        		<cmd text="do command2" />
        		<cmd text="continue command2" />
        		<pointRef name="pulse1"/>
        		<pointRef name="pulse2"/>
        	</command>
        </commands>
		<attributes>
        	<attribute name="ENERGY">
        		<basicLookup point="pulse1" />
        	</attribute>
        	<attribute name="LOAD_PROFILE">
        		<basicLookup point="pulse2" />
        	</attribute>
        	<attribute name="DEMAND">
        		<basicLookup point="demand1" />
        	</attribute>
        </attributes>      
    </device>
    <device>
        <type value="1022" javaConstant="MCT370" changeGroup="change1" />
        <displayName value="Device 2"/>
        <displayGroup value="display1"/>
        <points>
            <point type="PulseAccumulator">
                <name>pulse2</name>
                <offset value="3"/>
                <multiplier value="0.1"/>
                <unitofmeasure value="measure1"/>
            </point>
            <point init="true" type="Analog">
                <name>analog1</name>
                <offset value="1"/>
                <multiplier value=".0001"/>
                <unitofmeasure value="measure1"/>
            </point>
        </points>
		<attributes>
        	<attribute name="LOAD_PROFILE">
        		<basicLookup point="pulse2" />
        	</attribute>
        	<attribute name="DEMAND">
        		<basicLookup point="analog1" />
        	</attribute>
        </attributes>          
    </device>
    
    
    <!-- Group 2 -->
    <device>
        <type value="1036" javaConstant="MCT318L" />
        <displayName value="Device 3"/>
        <displayGroup value="display2"/>
        <points>
            <point type="Status">
                <name>status1</name>
                <offset value="2000"/>
                <stategroup value="state0"/>
            </point>
        </points>
    </device>
    
</deviceDefinitions>