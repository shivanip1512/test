<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="deviceDefinition.xsl"?>

<!--
This file contains default device and point information for all of the devices in Yukon.
-->

<deviceDefinition>
    
    <!-- Group 1 -->
    <device>
        <type value="1" javaConstant="constant1" changeGroup="change1" />
        <displayName value="Device 1"/>
        <displayGroup value="display1"/>
        <points>
            <point init="true" type="PulseAccumulator">
                <attribute name="usage"/>
                <name>pulse1</name>
                <offset value="2"/>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
            </point>

            <point type="PulseAccumulator">
                <attribute name="pulse2"/>
                <name>pulse2</name>
                <offset value="4"/>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
            </point>
            
            <point init="true" type="DemandAccumulator">
                <attribute name="demand"/>
                <name>demand1</name>
                <offset value="1"/>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure0"/>
            </point>
            
            <point init="true" type="Analog">
                <attribute name="totalUsage"/>
                <name>analog1</name>
                <offset value="1"/>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
                
            </point>
            <point type="Status">
                <name>status1</name>
                <offset value="1"/>
                <stategroup value="state0"/>
            </point>
            
        </points>
        <commands>
        	<command name="command1">
        		<cmd text="do command1" />
        		<pointRef name="pulse1"/>
        	</command>
        	<command name="command2">
        		<cmd text="do command2" />
        		<cmd text="continue command2" />
        		<pointRef name="pulse1" expectedMsgs="2"/>
        		<pointRef name="pulse2"/>
        	</command>
        </commands>
    </device>
    <device>
        <type value="2" javaConstant="constant2" changeGroup="change1" />
        <displayName value="Device 2"/>
        <displayGroup value="display1"/>
        <points>
            <point type="PulseAccumulator">
                <attribute name="pulse2"/>
                <name>pulse2</name>
                <offset value="3"/>
                <multiplier value="0.1"/>
                <unitofmeasure value="measure1"/>
            </point>
            <point init="true" type="Analog">
            	<attribute name="demand"/>
                <name>analog1</name>
                <offset value="1"/>
                <multiplier value=".0001"/>
                <unitofmeasure value="measure1"/>
            </point>
        </points>
    </device>
    
    
    <!-- Group 2 -->
    <device>
        <type value="3" javaConstant="constant3" />
        <displayName value="Device 3"/>
        <displayGroup value="display2"/>
        <points>
            <point type="Status">
                <name>status1</name>
                <offset value="2000"/>
                <stategroup value="state0"/>
            </point>
        </points>
    </device>
    
</deviceDefinition>