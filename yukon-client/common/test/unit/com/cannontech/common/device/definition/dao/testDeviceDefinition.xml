<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="deviceDefinition.xsl"?>

<!--
This file contains default device and point information for all of the devices in Yukon.
-->

<deviceDefinitions>
    
    <!-- Group 1 -->
    <device id="MCT310">
        <displayName>Device 1</displayName>
        <displayGroup>display1</displayGroup>
        <changeGroup>change1</changeGroup>
        <points>
            <point type="PulseAccumulator" offset="2">
            	<init>true</init>
                <name>pulse1</name>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
            </point>

            <point type="PulseAccumulator" offset="4">
                <name>pulse2</name>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
            </point>
            
            <point type="DemandAccumulator" offset="1">
            	<init>true</init>
                <name>demand1</name>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure0"/>
            </point>
            
            <point type="Analog" offset="1">
            	<init>true</init>
                <name>analog1</name>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
                
            </point>
            <point type="Status" offset="1">
                <name>status1</name>
                <stategroup value="state0"/>
            </point>
            
        </points>
        <commands>
        	<command id="COMMAND_1">
        		<name>command1</name>
        		<cmd text="do command1" />
        		<pointRef name="pulse1"/>
        	</command>
        	<command id="COMMAND_2">
        		<name>command2</name>
        		<cmd text="do command2" />
        		<cmd text="continue command2" />
        		<pointRef name="pulse1"/>
        		<pointRef name="pulse2"/>
        	</command>
        </commands>
		<attributes>
        	<attribute name="USAGE">
        		<basicLookup point="pulse1" />
        	</attribute>
        	<attribute name="LOAD_PROFILE">
        		<basicLookup point="pulse2" />
        	</attribute>
        	<attribute name="DEMAND">
        		<basicLookup point="demand1" />
        	</attribute>
        </attributes>      
    </device>
    <device id="MCT370">
        <displayName>Device 2</displayName>
        <displayGroup>display1</displayGroup>
        <changeGroup>change1</changeGroup>
        <points>
            <point type="PulseAccumulator" offset="3">
                <name>pulse2</name>
                <multiplier value="0.1"/>
                <unitofmeasure value="measure1"/>
            </point>
            <point type="Analog" offset="1">
            	<init>true</init>
                <name>analog1</name>
                <multiplier value=".0001"/>
                <unitofmeasure value="measure1"/>
            </point>
        </points>
		<attributes>
        	<attribute name="LOAD_PROFILE">
        		<basicLookup point="pulse2" />
        	</attribute>
        	<attribute name="DEMAND">
        		<basicLookup point="analog1" />
        	</attribute>
        </attributes>          
    </device>
    
    
    <!-- Group 2 -->
    <device id="MCT318L">
        <displayName>Device 3</displayName>
        <displayGroup>display2</displayGroup>
        <points>
            <point type="Status" offset="2000">
                <name>status1</name>
                <stategroup value="state0"/>
            </point>
        </points>
    </device>
    
</deviceDefinitions>