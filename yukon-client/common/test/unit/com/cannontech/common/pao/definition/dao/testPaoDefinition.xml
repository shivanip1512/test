<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="paoDefinition.xsl"?>

<!--
This file contains default pao and point information for all of the paos in Yukon.
-->

<paoDefinitions>
    
    <!-- Group 1 -->
    <pao id="MCT310">
        <displayName>Device 1</displayName>
        <displayGroup>display1</displayGroup>
        <changeGroup>change1</changeGroup>
        <points>
            <point type="PulseAccumulator" offset="2">
            	<init>true</init>
                <name>pulse1</name>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
                <decimalplaces value="3"/>
            </point>

            <point type="PulseAccumulator" offset="4">
                <name>pulse2</name>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
                <decimalplaces value="3"/>
            </point>
            
            <point type="DemandAccumulator" offset="1">
            	<init>true</init>
                <name>demand1</name>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure0"/>
                <decimalplaces value="3"/>
            </point>
            
            <point type="Analog" offset="1">
            	<init>true</init>
                <name>analog1</name>
                <multiplier value="1.0"/>
                <unitofmeasure value="measure1"/>
                <decimalplaces value="3"/>
            </point>
            <point type="Status" offset="1">
                <name>status1</name>
                <stategroup value="state0"/>
            </point>
            
        </points>
        <commands>
        	<command id="COMMAND_1">
        		<name>command1</name>
        		<cmd text="do command1" />
        		<pointRef name="pulse1"/>
        	</command>
        	<command id="COMMAND_2">
        		<name>command2</name>
        		<cmd text="do command2" />
        		<cmd text="continue command2" />
        		<pointRef name="pulse1"/>
        		<pointRef name="pulse2"/>
        	</command>
        </commands>
		<attributes>
        	<attribute name="USAGE">
        		<basicLookup point="pulse1" />
        	</attribute>
        	<attribute name="LOAD_PROFILE">
        		<basicLookup point="pulse2" />
        	</attribute>
        	<attribute name="DEMAND">
        		<basicLookup point="demand1" />
        	</attribute>
        </attributes>      
    </pao>
    <pao id="MCT370_BASE" abstract="true">
        <tags>
            <tag name="PORTER_COMMAND_REQUESTS" supports="false"/>
            <tag name="NETWORK_MANAGER_ATTRIBUTE_READS" supports="true"/>
            <tag name="MCT_200_SERIES" supports="false"/>
            <tag name="MCT_300_SERIES" supports="true"/>
        </tags>    
    </pao>
    
    <pao id="MCT370" inherits="MCT370_BASE">
        <displayName>Device 2</displayName>
        <displayGroup>display1</displayGroup>
        <changeGroup>change1</changeGroup>
        <points>
            <point type="PulseAccumulator" offset="3">
                <name>pulse2</name>
                <multiplier value="0.1"/>
                <unitofmeasure value="measure1"/>
                <decimalplaces value="3"/>
            </point>
            <point type="Analog" offset="1">
                <init>true</init>
                <name>analog1</name>
                <multiplier value=".0001"/>
                <unitofmeasure value="measure1"/>
                <decimalplaces value="3"/>
            </point>
        </points>
        <attributes>
            <attribute name="LOAD_PROFILE">
                <basicLookup point="pulse2" />
            </attribute>
            <attribute name="DEMAND">
                <basicLookup point="analog1" />
            </attribute>
        </attributes>      
        <tags>
            <tag name="PLC_ADDRESS_RANGE" supports="true">
                <value>1-5</value>
            </tag>
            <tag name="DUMMY_LONG_TAG">
                <value>8251709</value>
            </tag>
            <tag name="STARS_ACCOUNT_ATTACHABLE_METER" supports="true"/>
            <tag name="LOCATE_ROUTE" supports="false"/>
            <tag name="PORTER_COMMAND_REQUESTS" supports="true"/>
            <tag name="NETWORK_MANAGER_ATTRIBUTE_READS" supports="false"/>
            <tag name="MCT_200_SERIES" supports="true"/>
            <tag name="MCT_300_SERIES" supports="false"/>
        </tags>    
    </pao>
    
    
    <!-- Group 2 -->
    <pao id="MCT318L">
        <displayName>Device 3</displayName>
        <displayGroup>display2</displayGroup>
        <points>
            <point type="Status" offset="2000">
                <name>status1</name>
                <stategroup value="state0"/>
            </point>
        </points>
        <tags>
            <tag name="DUMMY_LONG_TAG">
                <value>0</value>
            </tag>
            <tag name="PORTER_COMMAND_REQUESTS"/>
            <tag name="NETWORK_MANAGER_ATTRIBUTE_READS"/>
            <tag name="MCT_300_SERIES"/>
        </tags> 
    </pao>
    
    <pao id="MCT318">
        <displayName>Device 4 -- expected to be unavailable</displayName>
        <points>
            <point type="Status" offset="2000">
                <name>status1</name>
                <stategroup value="state0"/>
            </point>
        </points>
        <tags>
            <tag name="DUMMY_LONG_TAG">
                <value></value> <!-- the blank value should make this guy unavailable -->
            </tag>
            <tag name="PORTER_COMMAND_REQUESTS"/>
        </tags> 
    </pao>
    
</paoDefinitions>