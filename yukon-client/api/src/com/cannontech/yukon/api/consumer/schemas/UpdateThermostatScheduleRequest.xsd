<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
            xmlns:yukon="http://yukon.cannontech.com/api" 
            targetNamespace="http://yukon.cannontech.com/api"
            elementFormDefault="qualified" version="1.0">

    <xsd:include schemaLocation="../../common/schemas/YukonMessage.xsd" />
    <xsd:include schemaLocation="../../common/schemas/Types.xsd"/>
    <xsd:include schemaLocation="./Schedule.xsd" />
    
    <xsd:complexType name="UpdateThermostatScheduleRequest">
        <xsd:annotation>
            <xsd:documentation xml:lang="en">
                This web service creates or edits the thermostat schedule supplied and saves it into Yukon.  If thermostatScheduleId attribute is 
                not provided, the request will create a thermostat schedule. Otherwise, the schedule with the provided thermostatScheduleId will be updated.
            </xsd:documentation>
        </xsd:annotation>
    
        <xsd:complexContent>
            <xsd:extension base="yukon:YukonMessage">
                <xsd:sequence minOccurs="1" maxOccurs="unbounded">
                    <xsd:element name="thermostatSchedule" type="yukon:ThermostatSchedule"/>
                </xsd:sequence>
                <xsd:attribute name="addOnFail" type="xsd:string" use="optional"/>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>

    <xsd:element name="updateThermostatScheduleRequest" type="yukon:UpdateThermostatScheduleRequest"/>

</xsd:schema>