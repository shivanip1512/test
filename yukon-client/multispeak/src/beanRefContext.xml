<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
 
 <beans>
<!-- The application context files is used only for Testing -->
   <bean id="com.cannontech.context.multispeak" 
        class="org.springframework.context.support.ClassPathXmlApplicationContext"
        lazy-init="true">
     <constructor-arg>
       <list>
            <value>com/cannontech/multispeak/client/applicationContext.xml</value>
       </list>
     </constructor-arg>
     <constructor-arg>
       <ref bean="com.cannontech.context.common"/> <!-- this is the parent -->
     </constructor-arg>
   </bean>
    
 </beans>
