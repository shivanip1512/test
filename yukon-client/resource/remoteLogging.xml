<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false" 
                     xmlns:log4j='http://jakarta.apache.org/log4j/'>

  <!-- appenders -->
   
  <!-- Custom appender for logging client messages to the server -->
  <!-- Adjust maximum file size by setting maxFileSizeString -->
  <!-- Possible values: 1g, .5M, 1000K, 1000000B or 10000000 -->
  <appender name="yukonRemoteAppender" class ="com.cannontech.clientutils.YukonRemoteAppender">
  	<!-- set the default file size to 1 gigabyte -->
  	<param name="maxFileSizeString" value="1G"/>
  </appender>
  
  <!-- Appends messages to the console. To change the layout format, see -->
  <!-- log4j documents for conversion/format character definitions -->
  <appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{MM/dd/yyyy HH:mm:ss,SSS zzz} [%t] %-5p %c - %m%n"/>
    </layout>
  </appender>
  
  <!-- package-level loggers -->
  <!-- Adjust the following logger levels to fine-tune logging output -->
  <!-- To turn off logging for any package use: level value="off"  -->
  <!-- Possible levels: OFF, FATAL, ERROR, WARN, INFO, DEBUG, OFF -->
  
  <logger name="org.hibernate" >
  	<level value="warn"/>
  </logger>
  
  <logger name="org.springframework">
  	<level value="warn"/>
  </logger>
  
  <!-- root logger -->
  
  <root>
    <level value ="info"/>
    <appender-ref ref="yukonRemoteAppender" />
    <appender-ref ref="consoleAppender" />
  </root>  
</log4j:configuration>
