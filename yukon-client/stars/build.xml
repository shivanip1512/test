<?xml version="1.0" ?>
<project name="yukon stars" default="all">
   
	<property file="../build/build.properties"/>

	<target name="all" depends="clean,build">
	</target>
   
	<target name="build">
		<mkdir dir="build"/>

		<javac srcdir="src" destdir="build" target="1.4" debug="true">                               
			<classpath>
				<fileset dir="${yukon.lib}">
					<include name="**/*.jar"/>
				</fileset>
			</classpath> 
		</javac>

		<jar jarfile="${yukon.lib}/stars.jar"
			basedir="build/" />

		<copy todir="${yukon.lib}">
			<fileset dir="resource">
				<include name="**/*.properties"/>
			</fileset>
		</copy>
	</target>

	<target name="install" depends="build">
   		<jar jarfile="${yukon.client.bin}/stars.jar"
   			basedir="build/" />   			       
   </target>
   
	<target name="clean">
		<delete dir="build"/>
	<!--	<delete>
			<fileset dir="${stars-web}/WEB-INF/lib">
				<include name="**/*.properties"/>
				<include name="**/*.jar"/>
				<exclude name="**/web.jar"/>
				<exclude name="**/struts.jar"/>
			</fileset>
		</delete>-->
   </target>
   
</project>