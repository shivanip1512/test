<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
    <!--  This is a custom HandlerMapping that uses the path property from the 
          JnlpController classes to determine if the controller matches. -->

    <context:component-scan base-package="com.cannontech.web.widget"/>

    <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
        <property name="cacheSeconds" value="0"/>
        <property name="customArgumentResolvers">
            <list>
                <bean class="com.cannontech.web.bulk.model.DeviceCollectionWebArgumentResolver"/>
                <bean class="com.cannontech.web.common.collection.InventoryCollectionWebArgumentResolver"/>
                <bean class="com.cannontech.web.login.UserContextWebArgumentResolver"/>
                <bean class="com.cannontech.web.login.EnumWebArgumentResolver"/>
                <bean class="com.cannontech.web.common.flashScope.FlashScopeWebArgumentResolver"/>
                <bean class="com.cannontech.web.stars.dr.operator.general.AccountInfoFragmentWebArgumentResolver"/>
                <bean class="com.cannontech.web.admin.energyCompany.general.EnergyCompanyInfoFragmentWebArgumentResolver"/>
            </list>
        </property>
        <property name="order" value="1"/>
        <property name="messageConverters">
           <list>
                <bean class="com.cannontech.web.spring.JacksonHttpMessageConverter"/>
            </list>
         </property>
    </bean>

    <bean class="com.cannontech.web.widget.support.WidgetHandlerMapping">
      <property name="order" value="1"/>
      <property name="interceptors">
        <list>
          <bean class="com.cannontech.web.widget.support.WidgetInterceptor"/>
        </list>
      </property>
    </bean>

    <bean id="otherHandlerMapping" class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"/>

    <bean id="viewResolver"
      class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass" value="com.cannontech.web.widget.support.ErrorPreservingJstlView"/>
        <property name="prefix" value="/WEB-INF/pages/widget/"/>
        <property name="suffix" value=""/>
    </bean>
    
    <bean class="com.cannontech.web.widget.support.WidgetExceptionHandler">
        <property name="friendlyExceptionResolver" ref="friendlyExceptionResolver"/>
    </bean>
    
    <bean id="viewNameTranslator" class="org.springframework.web.servlet.view.DefaultRequestToViewNameTranslator">
        <property name="suffix" value=".jsp"/>
    </bean>
    
    <bean name="/test/*" class="com.cannontech.web.widget.support.WidgetTestController"/>
</beans>
