<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="urlMap">
			<map>
				<entry key="/pointdata">
					<ref bean="ccPointTimestampController" />
				</entry>
				<entry key="/capAddInfo*">
					<ref bean="capBankAdditionalController" />
				</entry>
				<entry key="/cbcAjaxController">
					<ref bean="cbcAjaxController" />
				</entry>
				<entry key="/onelineBookmark">
					<ref bean="onelineBookmarkController" />
				</entry>
				<entry key="/checkCapPoint">
					<ref bean="checkCapPoint" />
				</entry>
                <entry key="/oneline/legend"><ref bean="onelineLegendController"/></entry>
                <entry key="/capcontrol/oneline/CBCReasonUpdaterServlet"><ref bean="onelineCommentController"/></entry>
			</map>
		</property>
	</bean>
	<!-- View Resolvers -->
	<bean id="viewResolverJSFPages"
		class="org.springframework.web.servlet.view.UrlBasedViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/pages/cbc/" />
		<property name="suffix" value=".jsp" />
		<property name="order">
			<value>1</value>
		</property>
	</bean>

	<bean id="viewResolver3Tier"
		class="org.springframework.web.servlet.view.UrlBasedViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/capcontrol/" />
		<property name="suffix" value=".jsp" />
		<property name="order">
			<value>2</value>
		</property>
	</bean>
	<bean id="viewResolverInclude"
		class="org.springframework.web.servlet.view.UrlBasedViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/pages/cbc/include/" />
		<property name="suffix" value=".jsp" />
		<property name="order">
			<value>3</value>
		</property>
	</bean>

	<!-- Controllers -->

	<bean id="ccPointTimestampController"
		class="com.cannontech.web.editor.CCPointTimestampServlet">
		<property name="cbcDao" ref="cbcDao" />
		<property name="requireSession" value="true"/> 
	</bean>
	<bean id="capBankAdditionalController"
		class="com.cannontech.web.editor.CapBankAdditionalServlet" />

	<bean id="cbcAjaxController"
		class="com.cannontech.web.editor.CBCAjaxMultiActionController">
		<property name="methodNameResolver">
			<ref bean="methodNameResolver" />
		</property>
		<property name="requireSession" value="true"/>  
		<property name="cbcCache" ref="cbcCache"/>
	</bean>

	<bean id="onelineBookmarkController"
		class="com.cannontech.web.editor.OnelineBookmarkController" />

	<bean id="checkCapPoint"
		class="com.cannontech.web.editor.CheckCapPoint" >
			<property name="jdbcTemplate" ref="jdbcTemplate"/>
	</bean>
    
    <bean id="onelineLegendController" class="com.cannontech.web.cbc.OnelineLegendController">
        <property name="stateDao" ref="stateDao"/>
        <property name="yukonImageDao" ref="yukonImageDao"/>
    </bean>
	
    <bean id="onelineCommentController" class="com.cannontech.web.cbc.OnelineCommentController">
        <property name="commentDao" ref="capCommentDao"/>
    </bean>
    
	<!-- Method name resolvers -->
	<bean id="methodNameResolver"
		class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">
		<property name="paramName">
			<value>action</value>
		</property>
	</bean>
</beans>
