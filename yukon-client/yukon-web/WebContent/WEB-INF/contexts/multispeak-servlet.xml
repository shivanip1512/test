<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="com.cannontech.web.multispeak" />

	<bean id="simpleUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/visualDisplays/loadManagement/*">visualDisplaysLoadManagementController</prop>
                <prop key="/visualDisplays/probabilityForPeak/*">visualDisplaysProbabilityForPeakLoadController</prop>
			</props>
		</property>
		<property name="order" value="2"></property>
	</bean>

	<bean id="viewResolver" class="org.springframework.web.servlet.view.UrlBasedViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/pages/multispeak/" />
	</bean>

	<bean id="multispeakController" class="com.cannontech.web.multispeak.MultispeakController"/>
	
	<bean class="com.cannontech.web.multispeak.deviceGroupSync.MultispeakDeviceGroupSyncController" />

	<bean id="methodNameResolver" class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">
		<property name="methodParamNames">
			<list>
				<value>view</value>
				<value>add</value>
				<value>remove</value>
				<value>removeAll</value>
				<value>update</value>
			</list>
		</property>
	</bean>
	
	<!--  VISUAL DISPLAYS -->
	<!-- LOAD MANAGEMENT CONTROLLER -->
	<bean id="visualDisplaysLoadManagementController" class="com.cannontech.web.multispeak.visualDisplays.VisualDisplaysLoadManagementController" >
    </bean>
    
    <!-- PROBABILITY FOR PEAK LOAD CONTROLLER -->
	<bean id="visualDisplaysProbabilityForPeakLoadController" class="com.cannontech.web.multispeak.visualDisplays.VisualDisplaysProbabilityForPeakLoadController" >
    </bean>
    
    <!-- VISUAL DISPLAYS SERVICE -->
    <bean id="visualDisplaysService" class="com.cannontech.web.multispeak.visualDisplays.service.impl.VisualDisplaysServiceImpl" >
    </bean>
    
    <!-- POWER SUPPLIER FACTORY -->
    <bean id="powerSupplierFactory" class="com.cannontech.web.multispeak.visualDisplays.service.PowerSupplierFactory" >
    </bean>

</beans>
