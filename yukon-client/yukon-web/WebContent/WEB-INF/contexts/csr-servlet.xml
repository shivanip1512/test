<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/move*">MoveInMoveOutController</prop>
                <prop key="/*">CsrController</prop>
            </props>
        </property>
    </bean>
    
    <bean id="viewResolver"
      class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/pages/amr/csr/"/>
    </bean>
    
	<bean id="CsrController" class="com.cannontech.web.amr.csr.CsrController" >
        <property name="cacheSeconds">
            <value type="int">0</value>
        </property>
        <property name="validators">
            <null />
        </property>
        <property name="methodNameResolver">
           <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="synchronizeOnSession">
            <value type="boolean">true</value>
        </property>
		<property name="deviceDao" ref="deviceDao"/>
		<property name="authDao" ref="authDao"/>
		<property name="roleDao" ref="roleDao"/>
		<property name="csrService" ref="csrService" />
		<property name="attributeService" ref="attributeService" />
    </bean>
    
    <bean id="MoveInMoveOutController" class="com.cannontech.web.moveInMoveOut.MoveInMoveOutController" >
        <property name="moveInMoveOutService" ref="moveInMoveOutService" />
        <property name="moveInMoveOutEmailService" ref="moveInMoveOutEmailService" />
        <property name="meterDao" ref="meterDao" />
        <property name="dateFormattingService" ref="dateFormattingService" />
    </bean>    
        
</beans>
