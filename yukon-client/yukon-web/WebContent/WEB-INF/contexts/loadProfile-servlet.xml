<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="interceptors">
            <list>
              <ref bean="yukonLoginCheckInterceptor"/>
            </list>
        </property>
        <property name="mappings">
            <value>
                /*=loadProfileController
            </value>
        </property>
    </bean>
    
    <bean id="jsonViewResolver"
      class="com.cannontech.web.util.JsonViewResolver">
    </bean>
    
    <bean id="testpage" class="org.springframework.web.servlet.mvc.ParameterizableViewController">
      <property name="viewName" value="test"/>
    </bean>
  
    <bean id="loadProfileController" class="com.cannontech.web.loadprofile.LoadProfileController" >
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="emailService" ref="emailService"/>
        <property name="loadProfileService" ref="longLoadProfileService"/>
        <property name="paoDao" ref="paoDao"/>
        <property name="yukonUserDao" ref="yukonUserDao"/>
        <property name="contactDao" ref="contactDao"/>
        <property name="deviceDao" ref="deviceDao"/>
        <property name="dateFormattingService" ref="dateFormattingService"/>
        <property name="meterDao" ref="meterDao"/>
        <property name="deviceErrorTranslatorDao" ref="deviceErrorTranslator"/>
    </bean>
</beans>
