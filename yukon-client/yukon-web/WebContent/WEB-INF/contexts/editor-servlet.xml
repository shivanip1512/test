<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
            	/userGroupSelector=userGroupSelector
                /user/*=UserEditorController
                /group/*=GroupEditorController
            </value>
        </property>
    </bean>    
    
    <bean id="viewResolver"
      class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/pages/editor/"/>
    </bean>
    
    <bean id="UserEditorController" class="com.cannontech.web.editor.user.UserEditorController" >
        <property name="cacheSeconds">
            <value type="int">0</value>
        </property>
        <property name="validators">
            <null />
        </property>
        <property name="methodNameResolver">
           <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="synchronizeOnSession">
            <value type="boolean">true</value>
        </property>
        <property name="yukonUserDao" ref="yukonUserDao"/>
        <property name="authenticationService" ref="authenticationService"/>
    </bean>
    
    <bean id="GroupEditorController" class="com.cannontech.web.editor.group.GroupEditorController" >
        <property name="cacheSeconds">
            <value type="int">0</value>
        </property>
        <property name="validators">
            <null />
        </property>
        <property name="methodNameResolver">
           <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="synchronizeOnSession">
            <value type="boolean">true</value>
        </property>
        <property name="yukonGroupDao" ref="yukonGroupDao"/>
    </bean>
        
    <bean id="userGroupSelector" class="org.springframework.web.servlet.mvc.ParameterizableViewController">
      <property name="viewName" value="userGroupSelector.jsp"/>
    </bean>
    
</beans>
