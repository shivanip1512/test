<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
            	/addDevicesResultUpdate=addDevicesResultUpdate
            	/*=GroupController
            </value>
        </property>
    </bean>    

	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
	    <property name="maxUploadSize" value="100000"/>
	</bean>    
    
    <bean id="viewResolver"
      class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/pages/group/"/>
    </bean>
    
    <bean id="GroupController" class="com.cannontech.web.group.GroupController" >
        <property name="cacheSeconds">
            <value type="int">0</value>
        </property>
        <property name="validators">
            <null />
        </property>
        <property name="methodNameResolver">
           <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="synchronizeOnSession">
            <value type="boolean">true</value>
        </property>
        
        <property name="deviceGroupService" ref="deviceGroupService"/>
        <property name="deviceGroupDao" ref="deviceGroupDao" />
        <property name="deviceGroupEditorDao" ref="deviceGroupEditorDao" />
        <property name="deviceGroupMemberEditorDao" ref="deviceGroupMemberEditorDao" />
        <property name="commandDao" ref="commandDao" />
        <property name="groupCommandExecutor" ref="groupCommandExecutor" />
        
        <property name="bulkProcessor" ref="oneAtATimeProcessor" />
        <property name="objectMapperFactory" ref="objectMapperFactory" />
        <property name="processorFactory" ref="processorFactory" />
        
        <property name="paoDao" ref="paoDao" />
        <property name="meterDao" ref="meterDao" />
    </bean>
    
	<bean id="bulkDeviceAdd" class="org.springframework.web.servlet.mvc.ParameterizableViewController">
    	<property name="viewName" value="bulkDeviceAdd.jsp"/>
    </bean>
    
	<bean id="addDevicesResultUpdate" class="org.springframework.web.servlet.mvc.ParameterizableViewController">
    	<property name="viewName" value="addDevicesResultUpdate.jsp"/>
    </bean>
    
</beans>
