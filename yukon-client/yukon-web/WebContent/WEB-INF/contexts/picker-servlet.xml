<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
                /point/test=testpage
                /point/*=PointPickerController
                /user/*=UserPickerController
                /loginGroup/*=LoginGroupPickerController
                /pao/*=PaoPickerController
            </value>
        </property>
    </bean>    
    
    <bean id="viewResolver"
      class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/pages/picker/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
    
    <bean id="testpage" class="org.springframework.web.servlet.mvc.ParameterizableViewController">
      <property name="viewName" value="point/test"/>
    </bean>
  
    <bean id="PointPickerController" class="com.cannontech.web.picker.PointPickerController" >
        <property name="cacheSeconds">
            <value type="int">0</value>
        </property>
        <property name="validators">
            <null />
        </property>
        <property name="methodNameResolver">
           <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="synchronizeOnSession">
            <value type="boolean">true</value>
        </property>
        <property name="pointDeviceSearcher" ref="pointDeviceSearcher"/>
    </bean>
    
    <bean id="UserPickerController" class="com.cannontech.web.picker.user.UserPickerController" >
        <property name="cacheSeconds">
            <value type="int">0</value>
        </property>
        <property name="validators">
            <null />
        </property>
        <property name="methodNameResolver">
           <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="synchronizeOnSession">
            <value type="boolean">true</value>
        </property>
        <property name="userSearcher" ref="userSearcher"/>
    </bean>
    
    <bean id="LoginGroupPickerController" class="com.cannontech.web.picker.user.LoginGroupPickerController" >
        <property name="cacheSeconds">
            <value type="int">0</value>
        </property>
        <property name="validators">
            <null />
        </property>
        <property name="methodNameResolver">
           <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="synchronizeOnSession">
            <value type="boolean">true</value>
        </property>
        <property name="loginGroupSearcher" ref="loginGroupSearcher"/>
    </bean>
    
    <bean id="PaoPickerController" class="com.cannontech.web.picker.pao.PaoPickerController" >
        <property name="cacheSeconds">
            <value type="int">0</value>
        </property>
        <property name="validators">
            <null />
        </property>
        <property name="methodNameResolver">
           <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="synchronizeOnSession">
            <value type="boolean">true</value>
        </property>
        <property name="paoTypeSearcher" ref="paoTypeSearcher"/>
    </bean>
    
</beans>
