<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="com.cannontech.web.amr"/>

	<bean id="annotationMapping" class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
        <property name="order" value="1"/>
    </bean>
    
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/bulkimporter/upload">BulkImporterUploadController</prop>
                <prop key="/bulkimporter/refreshResults">BulkImporterRefreshController</prop>
                <prop key="/bulkimporter/home">BulkImporterHomeController</prop>
                <prop key="/profile/*">ProfileController</prop>
                <prop key="/voltageAndTou/*">VoltageAndTouController</prop>
                <prop key="/manualCommand/*">ManualCommandController</prop>
                <prop key="/reports/*">AMRReportsController</prop>
                <prop key="/outageProcessing/monitorEditor/*">OutageMonitorEditorController</prop>
                <prop key="/outageProcessing/process/*">OutageProcessingController</prop>
            </props>
        </property>
    </bean>
    
    <bean id="viewResolver"
      class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/pages/amr/"/>
    </bean>
    
    <bean id="BulkImporterUploadController" class="com.cannontech.web.bulkimporter.BulkImporterUploadController">
    
        <property name="bulkImportDataDao" ref="bulkImportDataDao"/>
        
        <property name="methodNameResolver">
            <bean id="methodNameResolver" class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">
                 <property name="methodParamNames">
                     <list>
                         <value>importFile</value>
                         <value>forceManualImportEvent</value>
                         <value>clearImports</value>
                     </list>
                 </property>
            </bean>
        </property>
    </bean>
    
    <bean id="BulkImporterRefreshController" class="com.cannontech.web.bulkimporter.BulkImporterRefreshController">
        <property name="dateFormattingService" ref="dateFormattingService"/>
        <property name="bulkImportDataDao" ref="bulkImportDataDao"/>
    </bean>
    
    <bean id="BulkImporterHomeController" class="com.cannontech.web.bulkimporter.BulkImporterHomeController"/>
    
    <bean id="ProfileController" class="com.cannontech.web.amr.profile.ProfileController">
        <property name="cacheSeconds">
            <value type="int">0</value>
        </property>
        <property name="methodNameResolver">
           <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="synchronizeOnSession">
            <value type="boolean">true</value>
        </property>
    </bean>
    
    <bean id="VoltageAndTouController" class="com.cannontech.web.amr.voltagetou.VoltageAndTouController" >
        <property name="cacheSeconds">
            <value type="int">0</value>
        </property>
        <property name="methodNameResolver">
           <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="synchronizeOnSession">
            <value type="boolean">true</value>
        </property>
        <property name="databaseCache" ref="databaseCache"/>
    </bean>
    
    <bean id="ManualCommandController" class="com.cannontech.web.amr.manual.ManualCommandController" >
        <property name="cacheSeconds">
            <value type="int">0</value>
        </property>
        <property name="methodNameResolver">
           <bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver"/>
        </property>
        <property name="requireSession">
            <value type="boolean">true</value>
        </property>
        <property name="synchronizeOnSession">
            <value type="boolean">true</value>
        </property>

		<property name="paoDao" ref="paoDao" />
		<property name="commandDao" ref="commandDao" />
    </bean>
        
    <bean id="AMRReportsController" class="com.cannontech.web.amr.reports.AMRReportsController">
        <property name="pointDao" ref="pointDao"/>
        <property name="simpleReportService" ref="simpleReportService"/>
    </bean>
    
    <!-- OUTAGE PROCESSING -->
    <bean id="OutageMonitorEditorController" class="com.cannontech.web.amr.outageProcessing.OutageMonitorEditorController"/>
    <bean id="OutageProcessingController" class="com.cannontech.web.amr.outageProcessing.OutageProcessingController"/>
</beans>
