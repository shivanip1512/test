<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config>
	<lifecycle>
		<phase-listener>com.ibm.faces.webapp.ValueResourcePhaseListener</phase-listener>
	</lifecycle>
	<managed-bean>
		<managed-bean-name>pc_Cbctemplate</managed-bean-name>
		<managed-bean-class>pagecode.capcontrol.Cbctemplate</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>
		Random session data storage</description>
		<managed-bean-name>cbcSession</managed-bean-name>
		<managed-bean-class>com.cannontech.cbc.web.CBCSessionInfo</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>pc_Xsubs</managed-bean-name>
		<managed-bean-class>pagecode.capcontrol.Xsubs</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>pc_Hi1</managed-bean-name>
		<managed-bean-class>pagecode.capcontrol.Hi1</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>
		The joining data object to CapControl</description>
		<managed-bean-name>cbcAnnex</managed-bean-name>
		<managed-bean-class>com.cannontech.cbc.web.CapControlWebAnnex</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>connection</property-name>
			<property-class>com.cannontech.yukon.cbc.CBCClientConnection</property-class>
			<value>#{applicationScope.CBCConnection.connection}</value>
		</managed-property>
		<managed-property>
			<property-name>yukonUser</property-name>
			<property-class>com.cannontech.database.data.lite.LiteYukonUser</property-class>
			<value>#{sessionScope.YUKON_USER}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<description>
		Formats all CBC output</description>
		<managed-bean-name>cbcDisplay</managed-bean-name>
		<managed-bean-class>com.cannontech.cbc.CBCDisplay</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>pc_Xfeeders</managed-bean-name>
		<managed-bean-class>pagecode.capcontrol.Xfeeders</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>
		The cache from the DB</description>
		<managed-bean-name>DBCache</managed-bean-name>
		<managed-bean-class>com.cannontech.database.cache.DefaultDatabaseCache</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>
		CB cache</description>
		<managed-bean-name>DBCache</managed-bean-name>
		<managed-bean-class>com.cannontech.database.cache.DefaultDatabaseCache</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<navigation-case>
			<from-outcome>subs</from-outcome>
			<to-view-id>/capcontrol/Xsubs.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>feeders</from-outcome>
			<to-view-id>/capcontrol/Xfeeders.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-action>#{pc_Xsubs.doLinkSubCntrl}</from-action>
			<from-outcome>capcontrols</from-outcome>
			<to-view-id>/capcontrol/capcontrols.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
