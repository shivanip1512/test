<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config>

	<!-- Our DBCache object -->
    <managed-bean>
        <managed-bean-name>dbCache</managed-bean-name>
        <managed-bean-class>com.cannontech.database.cache.DefaultDatabaseCache</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
	
	
	<!-- Database specific (DBPersistent) managed beans -->
    <managed-bean>
        <managed-bean-name>ptEditorForm</managed-bean-name>
        <managed-bean-class>com.cannontech.web.editor.PointForm</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>capControlForm</managed-bean-name>
        <managed-bean-class>com.cannontech.web.editor.CapControlForm</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

	<!-- Navigation bean -->
    <managed-bean>
        <managed-bean-name>CtiNavObject</managed-bean-name>
        <managed-bean-class>com.cannontech.web.navigation.CtiNavObject</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>


	<!-- Converts HH:mm strings into total seconds -->
	<converter>
		<converter-id>cti_TimeConverter</converter-id> 
		<converter-class>com.cannontech.web.util.TimeConverter</converter-class> 
	</converter> 



	<!-- navigation rules for helloWorld.jsp -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>cbcResultsXX</from-outcome>
			<to-view-id>/capcontrol/results.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- navigation rules for page2.jsp -->
	<navigation-rule>
		<from-view-id>/page2.jsp</from-view-id>
		<navigation-case>
			<from-outcome>back</from-outcome>
			<to-view-id>/helloWorld.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
