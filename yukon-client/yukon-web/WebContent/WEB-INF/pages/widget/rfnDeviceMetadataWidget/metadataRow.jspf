<cti:msg2 key="${pair.first}" var="label"/>
<tags:nameValue name="${label}">
    <c:if test="${not empty pair.second}">
        <c:choose>
            <c:when test="${pair.first.time}">
                <cti:formatDate type="DATEHM" value="${pair.second}"/>
            </c:when>
            <c:when test="${pair.first == 'COMM_STATUS'}">
                <c:if test="${pair.second == 'UNKNOWN'}">
                    <c:set var="colorClass" value="warningColor"/> 
                </c:if>
                <c:if test="${pair.second == 'READY'}">
                    <c:set var="colorClass" value="successMessage"/> 
                </c:if>
                <c:if test="${pair.second == 'NOT_READY'}">
                    <c:set var="colorClass" value="errorMessage"/> 
                </c:if>
                <c:set var="valueKey">${pair.first.formatKey}.value.${pair.second}</c:set>
                <span class="${colorClass}"><i:inline key="${valueKey}"/></span>
            </c:when>
            <c:otherwise>
                <spring:escapeBody htmlEscape="true">${pair.second}</spring:escapeBody>
            </c:otherwise>
        </c:choose>
    </c:if>
</tags:nameValue>