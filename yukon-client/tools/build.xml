<?xml version="1.0" ?>
<project name="web" default="all">
      
   <property file="../build/build.properties"/>

   <target name="all" depends="clean,build">
    </target>
   
   <target name="build">
       <mkdir dir="build"/>
       
       <javac srcdir="src"
              destdir="build"
              target="${yukon.javac.target}" 
 	          source="${yukon.javac.source}"
              bootclasspath="${yukon.javac.bootclasspath}"
              debug="${yukon.javac.debug}">                               
          <classpath>                        
             <fileset dir="${yukon.lib}">
                <include name="**/*.jar"/>
             </fileset>
	      </classpath> 
     	</javac>

       <jar jarfile="${yukon.lib}/tools.jar"
           basedir="build/"  manifest="resource/manifest.mf">
           <manifest>
               <attribute name="Yukon-Version" value="${yukon.build.version}"/>
               <attribute name="Yukon-Details" value="${yukon.build.details}"/>
           </manifest>
	   	   <fileset dir="src">
	   	       <exclude name="**/*.java"/>
		   </fileset>
       </jar>       

       <jar jarfile="${yukon.lib}/tztest.jar"
            basedir="build/" manifest="resource/tztest_manifest.mf">
           <manifest>
               <attribute name="Main-Class" value="com.cannontech.tools.TimeZoneTest"/>
               <attribute name="Yukon-Version" value="${yukon.build.version}"/>
               <attribute name="Yukon-Details" value="${yukon.build.details}"/>
           </manifest>
           <include name="com/cannontech/tools/TimeZoneTest.class"/>
       </jar>

		<copy todir="${yukon.lib}">
	 	    <fileset dir="resource">
		 		<include name="**/*.bat"/>
	 	    	<include name="**/*.properties"/>
		    </fileset>
	    </copy>
   </target>

	<target name="install" depends="build">
   		<jar jarfile="${yukon.client.bin}/tools.jar" basedir="build/">
            <manifest>
                <attribute name="Yukon-Version" value="${yukon.build.version}"/>
                <attribute name="Yukon-Details" value="${yukon.build.details}"/>
            </manifest>
	    	<fileset dir="src">
	 			<include name="**/*.xml"/>
			</fileset>
   		</jar>   			       

		<copy todir="${yukon.client.bin}">
	 	    <fileset dir="resource">
		 		<include name="**/*.bat"/>
	 	    	<include name="**/*.properties"/>
		    </fileset>
	    </copy>
	</target>
   
   <target name="clean">
       <delete dir="build"/>        
   </target>

   <!-- Run unit tests - will stop running if a failure or error occurs during a test -->
   <target name="runUnitTests" description="Run all unit tests, stop on failure" />

</project>