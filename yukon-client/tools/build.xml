<?xml version="1.0" ?>
<project name="web" default="all">
      
   <property file="../build/build.properties"/>

   <target name="all" depends="clean,build">
    </target>
   
   <target name="build">
       <mkdir dir="build"/>
       
       <javac srcdir="src" destdir="build" target="1.4" debug="true">                               
          <classpath>                        
             <fileset dir="${yukon.lib}">
                <include name="**/*.jar"/>
             </fileset>
	      </classpath> 
     	</javac>

       <jar jarfile="${yukon.lib}/tools.jar"
            basedir="build/" />       

		<copy todir="${yukon.lib}">
	 	    <fileset dir="resource">
		 		<include name="**/*.bat"/>
	 	    	<include name="**/*.properties"/>
		    </fileset>
	    </copy>
   </target>

	<target name="install" depends="build">
   		<jar jarfile="${yukon.client.bin}/tools.jar"
   			basedir="build/" />   			       

		<copy todir="${yukon.client.bin}">
	 	    <fileset dir="resource">
		 		<include name="**/*.bat"/>
	 	    	<include name="**/*.properties"/>
		    </fileset>
	    </copy>
	</target>
   
   <target name="clean">
       <delete dir="build"/>        

    </target>
   
</project>