    <!-- Serializer Lists -->

    <bean id="messaging.thrift.LoadcontrolSerializerList" parent="messaging.thrift.CommonSerializerList"
        class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list merge="true">
                <ref local="messaging.thrift.load.ManualControlRequestSerializer" />
                <ref local="messaging.thrift.load.CommandSerializer" />
                <ref local="messaging.thrift.load.ControlAreaSerializer" />
                <ref local="messaging.thrift.load.CurtailmentAcknowledgeSerializer" />
                <ref local="messaging.thrift.load.LmMessageSerializer" />
                <ref local="messaging.thrift.load.EnergyExchangeAcceptSerializer" />
                <ref local="messaging.thrift.load.EnergyExchangeControlSerializer" />
                <ref local="messaging.thrift.load.ManualControlResponseSerializer" />
                <ref local="messaging.thrift.load.ConstraintViolationSerializer" />
                <ref local="messaging.thrift.load.ControlAreaItemSerializer" />
                <ref local="messaging.thrift.load.ProgramDirectSerializer" />
                <ref local="messaging.thrift.load.ProgramDirectGearSerializer" />
                <ref local="messaging.thrift.load.ControlAreaTriggerItemSerializer" />
                <ref local="messaging.thrift.load.ProgramCurtailmentSerializer" />
