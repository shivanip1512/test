                <ref local="messaging.thrift.load.GroupExpresscomSerializer" />
                <ref local="messaging.thrift.load.GroupMCTSerializer" />
                <ref local="messaging.thrift.load.GroupPointSerializer" />
                <ref local="messaging.thrift.load.GroupRippleSerializer" />
                <ref local="messaging.thrift.load.GroupSA105Serializer" />
                <ref local="messaging.thrift.load.GroupSA205Serializer" />
                <ref local="messaging.thrift.load.GroupSA305Serializer" />
                <ref local="messaging.thrift.load.GroupSADigitalSerializer" />
                <ref local="messaging.thrift.load.GroupGolaySerializer" />
                <ref local="messaging.thrift.load.GroupVersacomSerializer" />
