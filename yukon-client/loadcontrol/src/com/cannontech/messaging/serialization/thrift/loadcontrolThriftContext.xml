                <ref local="messaging.thrift.load.ProgramChangedSerializer" />
                <ref local="messaging.thrift.load.TriggerChangedSerializer" />
            </list>
        </property>
    </bean>


    <!-- Message Factories -->

    <bean id="messaging.thrift.LoadcontrolMessageFactory" class="com.cannontech.messaging.serialization.thrift.ThriftMessageFactory">
        <constructor-arg ref="messaging.thrift.LoadcontrolSerializerList" />
    </bean>

</beans>
