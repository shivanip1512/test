<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="serialization/thrift/loadcontrolThriftContext.xml" />

    <bean id="messaging.loadcontrolConnectionFactory" class="com.cannontech.messaging.util.impl.AmqConnectionFactory">
        <constructor-arg ref="messaging.thrift.LoadcontrolMessageFactory" />
        <constructor-arg value="loadmanagement" />
    </bean>

    <!-- Nameless bean (we don't want to retrieve this bean, it is just needed to initialize the ConnectionFactoryService) -->
    <bean init-method="init"
        class="com.cannontech.messaging.util.ConnectionFactoryService.ConnectionFactoryServiceInitializer">
        <constructor-arg index="0">
            <map>
                <entry key="LC">
                    <idref local="messaging.loadcontrolConnectionFactory" />
                </entry>
            </map>
        </constructor-arg>
        <constructor-arg index="1">
            <null />
        </constructor-arg>
    </bean>
</beans>
