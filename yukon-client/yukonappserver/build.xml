<?xml version="1.0" ?>
<project name="yukonappserver" default="all">
      
   <property file="../build/build.properties"/>

   <target name="all" depends="clean,build">
    </target>
   
   <target name="build">
       <mkdir dir="build"/>
       
       
       <mkdir dir="temp"/>
       
		<copy todir="temp">
		    <fileset dir="src">
				<include name="**/*.java"/>
			</fileset>
		    <fileset dir="ejbsrc">
				<include name="**/*.java"/>
			</fileset>
		</copy>

       <javac srcdir="temp" destdir="build" target="1.3">
          <classpath>                        
             <fileset dir="${yukon.lib}">
                <include name="**/*.jar"/>
             </fileset>
	      </classpath> 
     	</javac>
       
       <delete dir="temp"/>
              

       <jar jarfile="${yukon.lib}/yukonappserver.jar"
            basedir="build/" />       
   </target>

	<target name="install" depends="build">
   		<jar jarfile="${yukon.client.bin}/yukonappserver.jar"
   			basedir="build/" />   			 
   </target>
   
   <target name="clean">
       <delete dir="build"/>        

    </target>
   
</project>