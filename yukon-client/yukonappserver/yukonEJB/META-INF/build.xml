<?xml version="1.0"?>

<project name="Test" default="main" basedir="..">

   <!-- Init -->
   <target name="init">

      <property name="container" value="yukonEJB"/>
	  <property name="deploy.dir" value="D:\jboss-3.0.0RC1_tomcat-4.0.3/server/default/deploy"/>
	  <property name="eclipse.home" value="D:\eclipse\"/>
      <property name="src.dir" value="../src" />
      <property name="ejbsrc.dir" value="../ejbsrc" />
      
   </target>

   <!-- Run EJBDoclet -->
   <target name="Ejbdoclet" depends="init">
	  <ant antfile="META-INF/ejbGenerate.xml" dir="." target="ejbdoclet">
	    <property name="container" value="${container}"/>
	    <property name="deploy.dir" value="${deploy.dir}"/>
        <property name="src.dir" value="${src.dir}" />
        <property name="ejbsrc.dir" value="${ejbsrc.dir}" />
	  </ant>
   </target>

   <!-- Create EJB-JAR file -->
   <target name="Generate EJB"  depends="init">
	  <ant antfile="META-INF/ejbGenerate.xml" dir="." target="ejb-jar">
	    <property name="container" value="${container}"/>
	    <property name="deploy.dir" value="${deploy.dir}"/>
        <property name="src.dir" value="${src.dir}" />
        <property name="ejbsrc.dir" value="${ejbsrc.dir}" />
	  </ant>
   </target>

   <target name="Compile EJB"  depends="init">
	  <ant antfile="META-INF/ejbGenerate.xml" dir="." target="weblogic-ejb-jar">
	    <property name="container" value="${container}"/>
	    <property name="deploy.dir" value="${deploy.dir}"/>
        <property name="src.dir" value="${src.dir}" />
        <property name="ejbsrc.dir" value="${ejbsrc.dir}" />
	  </ant>
   </target>

   <!-- Deploy to ... -->
   <target name="Deploy" depends="init">
	  <ant antfile="META-INF/ejbGenerate.xml" dir="." target="deploy">
	    <property name="container" value="${container}"/>
	    <property name="deploy.dir" value="${deploy.dir}"/>
        <property name="src.dir" value="${src.dir}" />
        <property name="ejbsrc.dir" value="${ejbsrc.dir}" />
	  </ant>
   </target>

</project>
