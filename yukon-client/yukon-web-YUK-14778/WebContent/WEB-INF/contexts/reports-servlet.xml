<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"/>

    <bean id="viewResolver"
      class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/pages/reports/"/>
    </bean>
    
    
    <bean name="/simple/*" class="com.cannontech.web.reports.ReportsController">
        <property name="simpleReportService" ref="simpleReportService"/>
    </bean>
    
    <bean name="/cbcAnalysisChart/*" class="com.cannontech.web.reports.CBCAnalysisChartController">
        <property name="pointDao" ref="pointDao"/>
        <property name="substationBusDao" ref="substationBusDao"/>
        <property name="feederDao" ref="feederDao"/>
        <property name="capControlCache" ref="capControlCache"/>
    </bean>
    
</beans>
