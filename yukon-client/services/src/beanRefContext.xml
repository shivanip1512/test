<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="com.cannontech.context.services"
        class="org.springframework.context.support.ClassPathXmlApplicationContext" lazy-init="true" >
        <constructor-arg index="0">
            <list merge="true">
                <value>com/cannontech/services/server/sharedServiceManagerContext.xml</value>
                <value>com/cannontech/services/server/serviceManagerContext.xml</value>
                <value>com/cannontech/services/server/exportedServicesContext.xml</value>
                <value>com/cannontech/cbc/cbcContext.xml</value>
            </list>
        </constructor-arg>
        <constructor-arg index="1" value="true" />
        <constructor-arg index="2">
            <ref bean="com.cannontech.context.common"/>
        </constructor-arg>
    </bean>
</beans>
