<?xml version="1.0" ?>
<project name="services" default="all">

   <property file="../build/build.properties"/>

   <target name="all" depends="clean,build">
    </target>
   
   <target name="build">
       <mkdir dir="build"/>
       
       <javac srcdir="src" destdir="build" target="1.3">                               
          <classpath>                        
             <fileset dir="${yukon.lib}">
                <include name="**/*.jar"/>
             </fileset>
	      </classpath> 
     	</javac>

       <jar jarfile="${yukon.lib}/services.jar"
            basedir="build/" 
            manifest="resource/manifest.mf" />       

	   <copy todir="${yukon.lib}">
	 	 <fileset dir="resource">
		   <include name="**/*.gif"/>
	 	   <include name="**/*.ico"/>
		 </fileset>
       </copy>
       
       <copy todir="${yukon.lib}">
         <fileset dir="conf"/>
       </copy>
       
   </target>

	<target name="install" depends="build">
   		<jar jarfile="${yukon.client.bin}/services.jar"
   			basedir="build/"
   			manifest="resource/manifest.mf" />   			
   			
   		<copy todir="${yukon.client.bin}">
 	    	<fileset dir="resource">
				<include name="**/*.gif"/>
 				<include name="**/*.ico"/>
	    	</fileset>
       </copy>       
   </target>
   
   <target name="clean">
       <delete dir="build"/>        

    </target>
   
</project>