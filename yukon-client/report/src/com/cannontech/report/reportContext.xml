                      <bean class="com.cannontech.web.input.type.StringType"/>
                    </property>
                </bean>
              </list>
            </property>
          </bean>
        </property>
        <property name="reportLayoutData">
            <bean class="com.cannontech.simplereport.reportlayoutdata.GroupDevicesReportLayoutData"/>
        </property>
    </bean>
    
