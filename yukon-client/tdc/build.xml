<?xml version="1.0" ?>
<project name="tabular display console(tdc)" default="all">

   <property file="../build/build.properties"/>

   <target name="all" depends="clean,build">
    </target>
   
   <target name="build">
       <mkdir dir="build"/>
       
       <javac srcdir="src" destdir="build" target="${yukon.javac.target}" 
 	      source="${yukon.javac.source}" debug="${yukon.javac.debug}">                               
          <classpath>                        
             <fileset dir="${yukon.lib}">
                <include name="**/*.jar"/>
             </fileset>
	      </classpath> 
     	</javac>

	<jar jarfile="${yukon.lib}/tdc.jar" basedir="build/" manifest="resource/manifest.mf">
 	    <fileset dir="resource">
			<include name="**/*.gif"/>
	 		<include name="**/*.ico"/>
		</fileset>
	</jar>

	<copy todir="${yukon.lib}">
 	    <fileset dir="resource">
	 		<include name="**/*.dll"/>
	    </fileset>
	</copy>


   </target>
   
   <target name="install" depends="build">
		<jar jarfile="${yukon.lib}/tdc.jar" basedir="build/" manifest="resource/manifest.mf">
	 	    <fileset dir="resource">
				<include name="**/*.gif"/>
		 		<include name="**/*.ico"/>       	
			</fileset>
		</jar>
   			
   		<copy todir="${yukon.client.bin}">
 	    	<fileset dir="resource">
				<include name="**/*.dll"/>
	    	</fileset>
       </copy>       
   </target>
   

   <target name="clean">
       <delete dir="build"/>        

    </target>
   
</project>